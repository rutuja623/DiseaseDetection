<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diseases_background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="87dp"
        android:layout_toStartOf="@+id/button2"
        android:background="@drawable/custom_button_next"
        android:drawableTop="@drawable/ic_baseline_photo_camera_24"
        android:padding="13dp"
        android:shadowRadius="2"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/custom_button_next"
        android:drawableTop="@drawable/ic_baseline_photo_24"
        android:padding="13dp"
        android:shadowRadius="2"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="307dp"
        android:layout_height="236dp"
        android:layout_above="@+id/button3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="128dp" />

    <TextView
        android:id="@+id/classified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/more_sugar_regular"
        android:text="Disease identified as:"
        android:textSize="18dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="27dp"
        android:fontFamily="@font/more_sugar_regular"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="44dp"
        android:layout_toStartOf="@+id/textView3"
        android:fontFamily="@font/more_sugar_regular"
        android:text="Take picture"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/more_sugar_regular"
        android:text="Upload from gallary"
        android:textSize="18dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="182dp"
        android:background="@drawable/custom_button_next"
        android:shadowRadius="2"
        android:visibility="invisible" />

</RelativeLayout>